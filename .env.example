# Server Configuration
# The address and port the server will listen on
MCP_REGISTRY_SERVER_ADDRESS=:8080

# Database Configuration
# PostgreSQL connection string
MCP_REGISTRY_DATABASE_URL=postgres://localhost:5432/mcp-registry?sslmode=disable

# Seed Configuration
# Path to seed data file (optional)
MCP_REGISTRY_SEED_FROM=

# Application Version
# Set automatically during build, can be overridden for development
MCP_REGISTRY_VERSION=dev

# GitHub OAuth Configuration
# Required for GitHub authentication
MCP_REGISTRY_GITHUB_CLIENT_ID=
MCP_REGISTRY_GITHUB_CLIENT_SECRET=

# JWT Configuration
# Private key for signing JWT tokens (required for authentication)
# Generate with: openssl genrsa -out private.pem 2048
MCP_REGISTRY_JWT_PRIVATE_KEY=

# Authentication Settings
# Enable anonymous authentication (useful for development)
MCP_REGISTRY_ENABLE_ANONYMOUS_AUTH=false

# Registry Validation
# Enable validation of registry package references
MCP_REGISTRY_ENABLE_REGISTRY_VALIDATION=true

# OIDC Configuration (Optional)
# Enable OpenID Connect authentication
MCP_REGISTRY_OIDC_ENABLED=false
MCP_REGISTRY_OIDC_ISSUER=
MCP_REGISTRY_OIDC_CLIENT_ID=

# OIDC Claims and Permissions
# Comma-separated list of extra claims to include
MCP_REGISTRY_OIDC_EXTRA_CLAIMS=

# Comma-separated list of permissions for edit operations
MCP_REGISTRY_OIDC_EDIT_PERMISSIONS=

# Comma-separated list of permissions for publish operations
MCP_REGISTRY_OIDC_PUBLISH_PERMISSIONS=

# Agent Gateway Configuration
# Port for the agent gateway service
MCP_REGISTRY_AGENT_GATEWAY_PORT=8081
